  </nav>
</div>







  <script>
    const menudesk = document.getElementById('menu-d');
    const menuOverlay = document.getElementById('menu-overlay');
    const header = document.getElementById('header-d');

    // Toggle Menu
    document.addEventListener('click', () => {
      menuOverlay.classList.toggle('w-0');
      menuOverlay.classList.toggle('w-screen');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!header.contains(e.target) && !menuOverlay.contains(e.target)) {
        menuOverlay.classList.add('w-0');
        menuOverlay.classList.remove('w-screen');
      }
    });

   
  </script>




<header id="header-m" class=" fixed w-full top-0 lg:hidden block z-50 ">
  <div class="flex justify-between items-center px-s py-xxs">
    <!-- Logo -->
    <a href="/" class=" flex-shrink-0">
      <img class=" mix-blend-difference w-full" src="/svg/logo-m-sage.svg" alt="Logo">
    </a>

    <!-- Icons -->
    <div class="  flex items-center gap-xxs">
      <!-- Burger Icon -->
      <img id="burger-icon" class="mix-blend-difference cursor-pointer w-full" src="/svg/burger-icon.svg" alt="Burger ikon">
      <!-- Close Icon -->
      <img id="close-icon" class=" mixblend hidden cursor-pointer w-full" src="/svg/x-icon.svg" alt="Lukke ikon">
    </div>
  </div>
</header>

  
  <!-- Menu (Initially hidden) -->
  <div id="menu-m" class="h-screen top-0 fixed bg-forrest-500 w-screen z-40 hidden">
    <nav class="transition-all duration-300 ease-in-out h-full flex flex-col items-center gap-xs justify-center font-lemondejournal text-h2-mobil text-sage-500">
      <a href="/" class="text-sage-500 hover:text-cherry-500 transition-colors duration-300 ease-in-out">Hjem</a>
      <a href="/tilmeld" class="text-sage-500 hover:text-cherry-500 transition-colors duration-300 ease-in-out">Tilmeld</a>
      <a href="/omos" class="text-sage-500 hover:text-cherry-500 transition-colors duration-300 ease-in-out">Om os</a>
      <a href="/kontakt" class="text-sage-500 hover:text-cherry-500 transition-colors duration-300 ease-in-out">Kontakt</a>
    </nav>
  </div>
  
  <script>
    // Get elements
    const burgerIcon = document.getElementById('burger-icon');
    const closeIcon = document.getElementById('close-icon');
    const menu = document.getElementById('menu-m');
  
    // Toggle Menu visibility
    burgerIcon.addEventListener('click', () => {
      menu.classList.remove('hidden'); // Show menu
      burgerIcon.classList.add('hidden'); // Hide burger icon
      closeIcon.classList.remove('hidden'); // Show close icon
    });
  
    // Close Menu when clicking on the close icon
    closeIcon.addEventListener('click', () => {
      menu.classList.add('hidden'); // Hide menu
      burgerIcon.classList.remove('hidden'); // Show burger icon
      closeIcon.classList.add('hidden'); // Hide close icon
    });
  
    // Close menu if clicked outside the menu (optional)
    document.addEventListener('click', (e) => {
      if (!menu.contains(e.target) && !burgerIcon.contains(e.target)) {
        menu.classList.add('hidden'); // Hide menu
        burgerIcon.classList.remove('hidden'); // Show burger icon
        closeIcon.classList.add('hidden'); // Hide close icon
      }
    });
  </script>
  

 

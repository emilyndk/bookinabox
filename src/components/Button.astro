---
const { variant= "primary", size = "regular", input } = Astro.props;


const buttonStyling = "text-sage-500 flex justify-center items-center align-middle";


const variantClasses = {
   "primary": "fill-maroon-500 hover:fill-cherry-500",
   "secondary": "fill-forrest-500 hover:fill-cherry-500 "
};


const sizeClasses = {
   "regular": "w-[273px] h-[82px] py-m",
   "small": "w-[182px] h-[56px] py-s"
};
---
<button class="buttonComponent" class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot />
   <div class="z-50 absolute "> {input} </div>
   <svg id="" class="vectorCherry hidden md:block"  width="273" height="82" viewBox="0 0 273 82" xmlns="http://www.w3.org/2000/svg">

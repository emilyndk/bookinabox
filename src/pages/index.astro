  ];

  let currentIndex = 0; // Start med det første testimonial
  const forfatterElements = document.querySelectorAll(".testimonial-forfatter");
  const pElements = document.querySelectorAll(".testimonial-p");
  const containerElements = document.querySelectorAll(".testimonial-container");

  function updateTestimonial() {
    // Skjul alle containers for glidende overgang
    containerElements.forEach((container) => {
      container.classList.add("opacity-0");
    });

    setTimeout(() => {
      // Opdater tekst og overskrifter for alle testimonials
      forfatterElements.forEach((forfatterElement) => {
        forfatterElement.textContent = testimonials[currentIndex].heading;
      });
      pElements.forEach((pElement) => {
        pElement.textContent = testimonials[currentIndex].text;
      });

      // Vis alle containers igen
      containerElements.forEach((container) => {
        container.classList.remove("opacity-0");
      });

      // Opdater indeks
      currentIndex = (currentIndex + 1) % testimonials.length;
    }, 500); // Vent, indtil transitionen er færdig (0.5s)
  }

  // Skift testimonial hvert 10. sekund
  setInterval(updateTestimonial, 10000);
});


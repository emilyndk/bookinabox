    <img class="absolute left-10 bottom-10" src="/svg/papirblomster-lb.svg" alt="Blomster illustration">
    <img class="absolute left-10 top-10" src="/svg/papirblomster-lt.svg" alt="Blomster illustration">
    <img class="absolute right-0 top-20" src="/svg/birdfill-maroon.svg" alt="Fugl illustration">

    <!-- Main Content -->
    <section class="grid grid-cols-grid-desktop mx-margin-desktop gap-gap-desktop font-lemondejournal">
      <div class="absolute">
        <button class="bg-maroon-400">hej</button>
      </div>

